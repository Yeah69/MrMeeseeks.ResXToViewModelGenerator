<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <RootNamespace>MrMeeseeks.ResXToViewModelGenerator</RootNamespace>
    <AssemblyName>MrMeeseeks.ResXToViewModelGenerator</AssemblyName>
    <TargetFramework>netstandard2.0</TargetFramework>
    <LangVersion>preview</LangVersion>
    <Nullable>enable</Nullable>
    <IncludeBuildOutput>false</IncludeBuildOutput>
    <IncludeSymbols>false</IncludeSymbols>
    <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
    <NoWarn>$(NoWarn);NU5128</NoWarn>
    <DevelopmentDependency>true</DevelopmentDependency>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageVersion>69.0.10</PackageVersion>
    <Title>MrMeeseeks.ResXToViewModelGenerator</Title>
    <Authors>Yeah69</Authors>
    <Description>https://github.com/Yeah69/MrMeeseeks.ResXToViewModelGenerator</Description>
    <PackageProjectUrl>https://github.com/Yeah69/MrMeeseeks.ResXToViewModelGenerator</PackageProjectUrl>
    <RepositoryUrl>https://github.com/Yeah69/MrMeeseeks.ResXToViewModelGenerator</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageReleaseNotes>-/-</PackageReleaseNotes>
    <IsPackable>true</IsPackable>
    <PackBuildOutput>false</PackBuildOutput>
    <ReferenceOutputAssembly>true</ReferenceOutputAssembly>
    <BuildOutputTargetFolder>analyzers</BuildOutputTargetFolder>
  </PropertyGroup>

  <ItemGroup>
    <None Include="build\**">
      <Pack>true</Pack>
      <PackagePath>build\</PackagePath>
    </None>
  </ItemGroup>

  <ItemDefinitionGroup>
    <PackageReference>
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
  </ItemDefinitionGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.CodeAnalysis.Compilers" Version="3.9.0" PrivateAssets="true" />
  </ItemGroup>

  <ItemGroup>
    <!-- Generator dependencies -->
    <PackageReference Include="IndexRange" Version="1.0.0" Pack="true" GeneratePathProperty="true" PrivateAssets="true" />
    <PackageReference Include="Scriban" Version="3.7.0" Pack="true" GeneratePathProperty="true" PrivateAssets="true" />
    <PackageReference Include="System.CodeDom" Version="5.0.0" Pack="true" GeneratePathProperty="true" PrivateAssets="true" />
    <None Include="$(OutputPath)\$(AssemblyName).dll" Pack="true" PackagePath="analyzers/dotnet/cs" Visible="false" />
    <None Include="$(PkgScriban)\lib\netstandard2.0\*.dll" Pack="true" PackagePath="analyzers/dotnet/cs" Visible="false" />
    <None Include="$(PkgSystem_CodeDom)\lib\netstandard2.0\*.dll" Pack="true" PackagePath="analyzers/dotnet/cs" Visible="false" />
    <None Include="$(PkgIndexRange)\lib\netstandard2.0\*.dll" Pack="true" PackagePath="analyzers/dotnet/cs" Visible="false" />
  </ItemGroup>

</Project>
